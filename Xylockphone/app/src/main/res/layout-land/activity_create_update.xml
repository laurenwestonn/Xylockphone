<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageButton
        android:id="@+id/XyC"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@android:color/background_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/fab_margin"
        android:layout_above="@+id/notesPlayed"
        app:srcCompat="@drawable/xylkey" />

    <ImageButton
        android:id="@+id/XyD"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@android:color/background_light"
        android:layout_toRightOf="@+id/XyC"
        android:layout_toEndOf="@+id/XyC"
        android:layout_above="@+id/notesPlayed"
        android:elevation="@dimen/fab_margin"
        app:srcCompat="@drawable/xylkey" />

    <ImageButton
        android:id="@+id/XyE"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/XyD"
        android:layout_toEndOf="@+id/XyD"
        android:layout_above="@+id/notesPlayed"
        android:elevation="@dimen/fab_margin"
        app:srcCompat="@drawable/xylkey" />

    <ImageButton
        android:id="@+id/XyF"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@android:color/background_light"
        android:layout_toRightOf="@+id/XyE"
        android:layout_toEndOf="@+id/XyE"
        android:layout_above="@+id/notesPlayed"
        android:elevation="@dimen/fab_margin"
        app:srcCompat="@drawable/xylkey" />

    <ImageButton
        android:id="@+id/XyG"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@android:color/background_light"
        android:layout_toRightOf="@+id/XyF"
        android:layout_toEndOf="@+id/XyF"
        android:layout_above="@+id/notesPlayed"
        android:elevation="@dimen/fab_margin"
        app:srcCompat="@drawable/xylkey" />

    <ImageButton
        android:id="@+id/XyA"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@android:color/background_light"
        android:layout_toRightOf="@+id/XyG"
        android:layout_toEndOf="@+id/XyG"
        android:layout_above="@+id/notesPlayed"
        android:elevation="@dimen/fab_margin"
        app:srcCompat="@drawable/xylkey" />

    <Button
        android:id="@+id/play"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/icon_play"
        android:backgroundTint="@color/colorPrimary" />

    <Button
        android:id="@+id/record"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/play"
        android:layout_toRightOf="@+id/play"
        android:background="@drawable/icon_record"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="onRecord" />

    <TextView
        android:id="@+id/notesPlayed"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/record"
        android:layout_toLeftOf="@+id/save"
        android:layout_toRightOf="@+id/record"
        android:layout_toStartOf="@+id/save"
        android:text="@string/notesPlayed"
        android:textSize="36sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <Button
        android:id="@+id/save"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_save"
        android:backgroundTint="@color/colorPrimary" />
</RelativeLayout>
